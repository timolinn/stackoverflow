{
    "name": "stackoverflow_clone",
    "version": "0.1.0",
    "description": "An API clone of stackoverflow",
    "repository": {
        "type": "git",
        "url": "https://github.com/timolinn/stackoverflow_clone"
    },
    "author": "Timothy Onyiuke <timothyonyiuke@gmail.com>",
    "license": "MIT",
    "engines": {
        "node": ">=12.13.1"
    },
    "jest": {
        "modulePathIgnorePatterns": [
            "./dist/*"
        ],
        "globals": {
            "ts-jest": {
                "tsConfig": "tsconfig.json"
            }
        },
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "testMatch": [
            "**/components/**/*.spec.(ts|js)"
        ],
        "testEnvironment": "node"
    },
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "cross-env NODE_ENV=test jest --forceExit --coverage --testTimeout=10000 --detectOpenHandles",
        "watch-test": "npm run test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "dependencies": {
        "@elastic/elasticsearch": "^7.7.1",
        "@hapi/joi": "^16.1.8",
        "@sendgrid/mail": "^6.4.0",
        "@types/helmet": "0.0.47",
        "app-root-path": "^3.0.0",
        "bcrypt-nodejs": "^0.0.3",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^8.1.0",
        "express": "^4.17.1",
        "express-useragent": "^1.0.13",
        "express-validator": "^6.2.0",
        "helmet": "^3.22.0",
        "jsonwebtoken": "^8.5.1",
        "juice": "^6.0.0",
        "lodash": "^4.17.19",
        "lusca": "^1.6.1",
        "mongoose": "^5.7.1",
        "mongoose-autopopulate": "^0.12.2",
        "morgan": "^1.9.1",
        "nodemailer": "^6.3.0",
        "passport": "^0.4.0",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "pug": "^2.0.4",
        "redis": "^2.8.0",
        "reflect-metadata": "^0.1.13",
        "request": "^2.88.0",
        "request-promise": "^4.2.4",
        "slugify": "^1.3.6",
        "swagger-jsdoc": "^3.5.0",
        "swagger-ui-express": "4.1.2",
        "typedi": "^0.8.0",
        "uuid": "^3.4.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/app-root-path": "^1.2.4",
        "@types/bcrypt-nodejs": "^0.0.30",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.3",
        "@types/compression": "^1.0.1",
        "@types/concurrently": "^4.1.0",
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^6.1.1",
        "@types/eslint": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/express-useragent": "^1.0.0",
        "@types/hapi__joi": "^16.0.4",
        "@types/jest": "^24.0.18",
        "@types/jsonwebtoken": "^8.3.5",
        "@types/lodash": "^4.14.141",
        "@types/lusca": "^1.6.1",
